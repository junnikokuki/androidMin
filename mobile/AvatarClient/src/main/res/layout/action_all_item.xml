<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:focusable="true"
             android:longClickable="true">

    <RelativeLayout
        android:id="@id/shake_zone_id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <FrameLayout
            android:id="@id/center_zone_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            >

            <com.ubtechinc.alpha.mini.avatar.widget.RoundProgressImageView
                android:id="@+id/menu_icon"
                style="@style/avatar_action_imageview"
                android:visibility="visible"
                app:border_color_round="@color/avatar_model_stop_btn_color"
                app:border_type_round="full_line"
                app:border_width_round="2dp"
                app:shape_type="rectangle"
                android:src="@drawable/ic_hi_test_gray"
                tools:ignore="ContentDescription"/>

        </FrameLayout>


        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/center_zone_id"
            android:gravity="center|left"
            android:textColor="@color/alexa_color_main_seven"
            android:textSize="14sp"
            />
    </RelativeLayout>
</FrameLayout>
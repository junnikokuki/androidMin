        <!--<item name="android:windowNoTitle">true</item>&lt;!&ndash;无标题&ndash;&gt;-->
    <!--</style>-->

    <style name="setting_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/first_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_underline_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="heng_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/msg_sub</item>

    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <!---->
    <style name="ParentBtnStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="DeleteBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/delete_button_selector</item>
        <item name="android:textColor">@color/delete_button_text_color_selector</item>
    </style>

    <style name="NormalBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/normal_button_selector</item>
        <item name="android:textColor">@color/normal_button_text_color_selector</item>
    </style>

    <style name="BlueBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="lightGreenBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SolidBlueBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SolidRedBtnStyle" parent="ParentBtnStyle">
        <item name="android:background">@drawable/red_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="progress_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">33dp</item>
        <item name="android:indeterminateDrawable">@drawable/loading_image_small</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="progress_normal" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:indeterminateDrawable">@drawable/loading_image_normal</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateOnly">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/color_19000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:FrameAnimView="http://schemas.android.com/apk/res-auto">
    <com.haohaohu.frameanimview.FrameAnimView
        android:id="@+id/iv_cardemo_ani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        FrameAnimView:animSrc="@drawable/car_demo_animation"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_cardemo_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_know"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/standard_text_size_14dp_t5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_28"
        android:background="@drawable/cardemo_know_bg"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/control_car"
        android:textSize="@dimen/standard_text_size_15dp_t4"
        android:textColor="@color/color_FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_cardemo_know"
        android:layout_marginBottom="@dimen/dimen_25"
        />
</RelativeLayout>

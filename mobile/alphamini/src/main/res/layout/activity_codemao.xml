<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/code_mao_root">

    <com.tencent.smtt.sdk.WebView

        android:id="@+id/webview_coding"

        android:layout_width="fill_parent"

        android:layout_height="fill_parent"

        android:paddingLeft="5dp"

        android:paddingRight="5dp" />


    <include layout="@layout/layout_coding_webview_loading"
        android:id="@+id/loading"
        />

    <include layout="@layout/layout_coding_network_error"
        android:id="@+id/network_error"
        android:visibility="gone"
        />

    <include layout="@layout/layout_coding_wifi_mobile_no_connection"
        android:id="@+id/no_connection"
        android:visibility="gone"
        />
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
       />
</FrameLayout>
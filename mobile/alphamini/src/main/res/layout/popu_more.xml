<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/content_view"
    android:orientation="vertical"
    android:background="@drawable/bg_home_menu"
    android:gravity="center_horizontal"
    android:layout_gravity="right"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/more_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_share"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_menu_share"
        />
    <include layout="@layout/line_h_view" />

    <TextView
        android:id="@+id/more_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_setting"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_menu_setting"
        />
</LinearLayout>
</FrameLayout>
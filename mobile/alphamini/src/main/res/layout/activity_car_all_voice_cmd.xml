<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_voicecmd_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_back"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_marginLeft="@dimen/dimen_18"
        />
    <TextView
        android:id="@+id/tv_voicecmd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_voice_cmd"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/standard_text_size_18dp_t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_19"
        />
    <ImageView
        android:id="@+id/iv_voicecmd_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_marginRight="@dimen/dimen_18"
        />
    <TextView
        android:id="@+id/tv_voicecmd_official"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/official_word"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/standard_text_size_15dp_t4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_25"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_voicecmd_all_cmd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_voicecmd_title"
        android:layout_above="@+id/tv_voicecmd_official"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>

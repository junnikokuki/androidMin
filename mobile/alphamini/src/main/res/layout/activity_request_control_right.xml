<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bg"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_close"
            style="@style/BackButtonStyle" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_gray"
            android:id="@+id/user_name_small_tv"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="@string/request_control_right_hint"/>



        <TextView
            android:id="@+id/user_name_big_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_above="@id/user_name_small_tv"
            android:text="@string/request_right_title_tips"
            android:textColor="@color/first_text"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_above="@id/user_name_big_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_prompt"/>

        <TextView
            android:id="@+id/to_main_tv"
            style="@style/NormalBtnStyle"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:text="@string/router_mainpage"/>


        <FrameLayout
            android:id="@+id/open_bluetooth_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/to_main_tv"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/apply_share_btn"
                style="@style/BlueBtnStyle"
                android:layout_gravity="center_horizontal"
                android:text="@string/send_apply_share_msg"/>

            <TextView
                android:id="@+id/apply_share_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_top_confirm_p"
                android:text="@string/send_apply_share_success"
                android:textColor="@color/first_text"
                android:padding="10dp"
                android:visibility="gone"
                android:textSize="15sp"/>
        </FrameLayout>

    </RelativeLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/robot_wifi_curr_name"
        android:gravity="center_vertical"
        android:textColor="@color/text_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wifi_name_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:textColor="@color/first_text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="@dimen/standard_text_size_15dp_t4" />

    <TextView
        android:id="@+id/btn_choose_wifi"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="44dp"
        android:layout_below="@+id/under_line"
        android:layout_marginTop="20dp"
        android:text="@string/change_robot_wifi"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_normal_border"
        android:gravity="center"
        android:textSize="15sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_private_permission"
        android:textSize="13sp"
        android:textColor="@color/first_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="@string/apply_permission_desc"
        android:layout_marginBottom="15dp"/>


    <include layout="@layout/line_h_view" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/video_surveillance"
            android:textColor="@color/first_text"
            android:textSize="@dimen/font_size_big" />

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip" />

    </LinearLayout>

    <include layout="@layout/line_h_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/read_gallery"
            android:textColor="@color/first_text"
            android:textSize="@dimen/font_size_big" />

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip" />
    </LinearLayout>


    <include layout="@layout/line_h_view" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact"
            android:textColor="@color/first_text"
            android:textSize="@dimen/font_size_big" />

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip" />
    </LinearLayout>

    <include layout="@layout/line_h_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/coding"
            android:textColor="@color/first_text"
            android:textSize="@dimen/font_size_big" />

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_coding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip" />
    </LinearLayout>


    <include layout="@layout/line_h_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/setting_private_permission_descript3"
        android:textColor="@color/text_gray"
        android:textSize="13sp" />

    <com.ubtechinc.alpha.mini.widget.taglayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        app:max_select="-1"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.ubtechinc.alpha.mini.widget.taglayout.TagFlowLayout>

    <TextView
        android:id="@+id/accept_btn"
        android:layout_gravity="center_horizontal"
        style="@style/BlueBtnStyle"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:text="@string/accept"
        android:textSize="@dimen/font_size_big"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/reject_btn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="15dp"
        android:gravity="center"
        style="@style/SolidRedBtnStyle"
        android:layout_marginBottom="35dp"
        android:text="@string/reject" />

</LinearLayout>


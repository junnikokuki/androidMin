<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_detectedresult_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="@color/color_0BA3FF"
        android:layout_marginTop="@dimen/dimen_14"
        android:layout_marginLeft="@dimen/dimen_14"
        />
    <ImageView
        android:id="@+id/tv_detectedresult_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_cancel"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_marginRight="@dimen/dimen_18"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tv_detectresult_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/dont_find_motor"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/standard_text_size_18dp_t1"
        android:layout_marginTop="@dimen/dimen_50"
        />
    <TextView
        android:id="@+id/tv_detectresult_little_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/install_motor"
        android:textSize="@dimen/dimen_14"
        android:textColor="@color/color_000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_detectresult_title"
        android:layout_marginTop="@dimen/dimen_10"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_22"
        android:layout_below="@+id/tv_detectresult_little_title"
        >
        <ImageView
            android:id="@+id/iv_motor_damage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motor_damage"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_ir_damage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ir_sensor_damage"
            android:layout_toRightOf="@+id/iv_motor_damage"
            android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_detectedresult_redetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/re_detect"
        android:textColor="@color/color_0BA3FF"
        android:textSize="@dimen/standard_text_size_13dp_t6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_34"
        android:layout_marginLeft="@dimen/dimen_162"
        android:background="@drawable/carlist_item_bg"
        />
    <TextView
        android:id="@+id/tv_detectedresult_jimuvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_34"
        android:layout_marginLeft="@dimen/dimen_28"
        android:text="@string/see_jimu_video"
        android:textColor="@color/color_0BA3FF"
        android:textSize="@dimen/standard_text_size_13dp_t6"
        android:layout_toRightOf="@+id/tv_detectedresult_redetect"
        android:background="@drawable/carlist_item_bg"
        android:gravity="center"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg_apply_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_private_permission"
        android:textSize="13sp"
        android:textColor="@color/dialog_button_text_black" />

    <TextView
        android:id="@+id/msg_apply_result_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="@string/setting_private_permission_descript2"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_size_big" />


    <TextView
        android:id="@+id/msg_apply_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="15dp"
        android:text="@string/robot_shared"
        android:textSize="16sp"
        android:textColor="@color/btn_blue"  />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_carlist_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_marginLeft="@dimen/dimen_17"
        android:src="@drawable/carlist_top_back"
        />
    <ImageView
        android:id="@+id/iv_carlist_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_marginRight="@dimen/dimen_18"
        android:src="@drawable/ic_top_cancel"
        />
    <TextView
        android:id="@+id/tv_carlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_43"
        android:text="@string/select_connect_car"
        android:textSize="@dimen/standard_text_size_18dp_t1"
        android:textColor="@color/color_000000"
        android:layout_centerHorizontal="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_carlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_below="@+id/tv_carlist_title"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_15"
        android:scrollbars="vertical"
        >
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_no_find_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_carlist_title"
        android:layout_marginTop="@dimen/dimen_36"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_carlist_no_find_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carlist_no_find_car"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_carlist_no_find_car"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_centerHorizontal="true"
            android:text="@string/no_find_car"
            android:textColor="@color/color_666666"
            />

        <TextView
            android:id="@+id/tv_carlist_redetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/re_detect"
            android:textColor="@color/color_0BA3FF"
            android:textSize="@dimen/standard_text_size_13dp_t6"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_162"
            android:background="@drawable/carlist_item_bg"
            />
        <TextView
            android:id="@+id/tv_carlist_contact_customers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_28"
            android:text="@string/contact_customers"
            android:textColor="@color/color_0BA3FF"
            android:textSize="@dimen/standard_text_size_13dp_t6"
            android:layout_toRightOf="@+id/tv_carlist_redetect"
            android:background="@drawable/carlist_item_bg"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_default_no_binding"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        android:textColor="@android:color/black"
        android:text="@string/not_binding_robot"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:layout_marginTop="8dp"
        android:text="@string/bind_now"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        style="@style/BlueBtnStyle"
        android:onClick="addRobot"
        android:gravity="center"
        android:text="@string/bind_new_alphamini"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true" />
</LinearLayout>
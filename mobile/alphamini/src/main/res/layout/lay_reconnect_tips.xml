<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
        android:id="@+id/tips_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_home_tips"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <TextView
        android:id="@+id/tips_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/still_offline"/>

    <TextView
        android:id="@+id/tips_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips_line1"
        android:textSize="12sp"
        android:text="@string/try_try"/>

    <TextView
        android:id="@+id/tips_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips_line1"
        android:layout_toRightOf="@id/tips_line2"
        android:textColor="@color/blue_btn_normal"
        android:textSize="13sp"
        android:text="@string/switch_wifi"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/tips_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tips_bg"
        android:src="@drawable/ic_home_tips_close"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/standard_text_size_14dp_t5"
        android:text="@string/share_status"
        android:textColor="@color/text_gray"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:id="@+id/tv_share_time"
        android:textSize="@dimen/standard_text_size_16dp_t3"
        android:text="@string/share_status"
        android:textColor="@color/first_text"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:textSize="@dimen/standard_text_size_14dp_t5"
        android:text="@string/permision_setting"
        android:gravity="center_vertical"
        android:textColor="@color/text_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_big"
            android:text="@string/video_surveillance"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"/>

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_big"
            android:text="@string/read_gallery"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"/>

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_big"
            android:text="@string/contact"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"/>

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_big"
            android:text="@string/coding"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"/>

        <com.ubtechinc.alpha.mini.widget.SwitchButton
            android:id="@+id/switchbtn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            app:kswBackDrawable="@drawable/switch_btn_bg"
            app:kswThumbDrawable="@drawable/switch_thumb_drawable"
            app:kswThumbHeight="25dip"
            app:kswThumbMargin="3dip"
            app:kswThumbWidth="25dip"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/font_size_big"
        android:text="@string/setting_private_permission_descript3"
        android:textColor="@color/text_gray"/>

    <com.ubtechinc.alpha.mini.widget.taglayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        app:max_select="-1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
    </com.ubtechinc.alpha.mini.widget.taglayout.TagFlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg_color"/>

    <TextView
        android:onClick="onCancleShare"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:textSize="@dimen/font_size_big"
        android:textColor="@color/btn_red"
        android:text="@string/cancle_share" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg_color"/>

</LinearLayout>
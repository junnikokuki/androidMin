<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_all_skill"
    android:orientation="vertical"
    android:background="@drawable/bg_home_gaussian_blur">


    <TextView
        android:id="@+id/skill_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skill_video_selector"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="5dp"
        android:layout_marginBottom="30dp"
        android:text="@string/video_surveillance"
        android:layout_alignBottom="@+id/skill_notify"
        android:layout_toStartOf="@+id/skill_notify" />


    <TextView
        android:id="@+id/skill_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/skill_notify_selector"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="5dp"
        android:text="@string/notify"
        android:layout_above="@+id/all_skill_close"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/all_skill_close"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/close_btn_selector" />


    <TextView
        android:id="@+id/skill_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skill_gallery_selector"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="5dp"
        android:text="@string/gallery"
        android:layout_alignBottom="@+id/skill_avatar"
        android:layout_toRightOf="@id/skill_notify"/>


</RelativeLayout>
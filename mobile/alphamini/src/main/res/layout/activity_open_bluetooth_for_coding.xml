<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_norobot_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ImageView
        android:id="@+id/iv_close"
        style="@style/coding_back_button_style"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/coding_bluetooth_open_title"
            android:textColor="@color/first_text"
            android:textSize="@dimen/text_size_24" />


        <TextView
            android:id="@+id/cannot_find_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="@string/coding_bluetooth_open_tips"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size" />


        <TextView
            android:id="@+id/open_bluetooth"
            style="@style/BlueBtnStyle"
            android:layout_below="@id/cannot_find_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="@string/coding_bluetooth_open_btn" />
    </RelativeLayout>

</RelativeLayout>


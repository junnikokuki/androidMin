<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ubtechinc.alpha.mini.ui.car.CarActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tv_go_to_buy"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_buy"
        android:textColor="@color/color_0BA3FF"
        android:textSize="@dimen/standard_text_size_15dp_t4"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_start_car"
        android:layout_above="@+id/tv_go_to_buy"
        android:layout_marginBottom="@dimen/dimen_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dimen_12"
        android:text="开车去浪"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/standard_text_size_15dp_t4"
        android:background="@drawable/btn_blue"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_setup_jimu"
        android:layout_above="@+id/tv_start_car"
        android:layout_marginBottom="@dimen/dimen_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dimen_12"
        android:text="搭建坐骑"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/standard_text_size_15dp_t4"
        android:background="@drawable/btn_blue"
        android:gravity="center_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_slide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/tv_setup_jimu"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/car_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />
        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>

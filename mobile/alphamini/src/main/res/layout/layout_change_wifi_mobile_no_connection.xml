<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">



    <TextView
        android:id="@+id/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/action_btn_space"
        android:text="@string/network_unavaliable"
        android:textColor="@color/first_text"
        android:layout_centerInParent="true"
        android:textSize="@dimen/standard_text_size_15dp_t4" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_default_mobile_without_network"
        android:layout_above="@id/text_hint"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_hint"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_gray"
        android:layout_marginTop="6dp"
        android:text="@string/phone_must_connect_network"
        android:textSize="@dimen/standard_text_size_12dp_t7" />

</RelativeLayout>